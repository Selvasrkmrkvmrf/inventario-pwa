// Variables para almacenar el contenido
const inventario = [
    { codigo: "PF-S-10", nombre: "Punto Fijo Pequeño 10mm", cantidad: 100 },
    { codigo: "PF-L-20", nombre: "Punto Fijo Grande 20mm", cantidad: 50 },
    { codigo: "H-300", nombre: "Herramienta 300mm", cantidad: 75 },
    { codigo: "M-500", nombre: "Material 500kg", cantidad: 30 },
];

// Función para mostrar el inventario
function mostrarInventario() {
    const content = document.getElementById('content');
    content.innerHTML = '<h2>Inventario</h2><table><tr><th>Código</th><th>Nombre</th><th>Cantidad</th><th>Acción</th></tr>';

    inventario.forEach(item => {
        content.innerHTML += `
            <tr>
                <td>${item.codigo}</td>
                <td>${item.nombre}</td>
                <td>${item.cantidad}</td>
                <td><button onclick="actualizarInventario('${item.codigo}')">Actualizar</button></td>
            </tr>
        `;
    });

    content.innerHTML += '</table>';
}

// Función para mostrar la sección de entrada
function mostrarEntrada() {
    const content = document.getElementById('content');
    content.innerHTML = '<h2>Entrada de Inventario</h2><p>Agregar productos al inventario.</p>';
}

// Función para mostrar la sección de salida
function mostrarSalida() {
    const content = document.getElementById('content');
    content.innerHTML = '<h2>Salida de Inventario</h2><p>Sacar productos del inventario.</p>';
}

// Función para mostrar el registro
function mostrarRegistro() {
    const content = document.getElementById('content');
    content.innerHTML = '<h2>Registro de Movimientos</h2><p>Ver todos los movimientos registrados.</p>';
}

// Función para actualizar el inventario
function actualizarInventario(codigo) {
    // Encuentra el item en el inventario
    const item = inventario.find(i => i.codigo === codigo);

    if (item) {
        // Aquí puedes agregar la lógica para actualizar el inventario
        const nuevaCantidad = prompt(Cantidad actual de ${item.nombre}: ${item.cantidad}. Ingresa la nueva cantidad:);
        
        if (nuevaCantidad && !isNaN(nuevaCantidad)) {
            item.cantidad = parseInt(nuevaCantidad);
            alert(Inventario de ${item.nombre} actualizado. Nueva cantidad: ${item.cantidad});
            mostrarInventario();  // Volver a mostrar el inventario actualizado
        } else {
            alert("Por favor ingresa una cantidad válida.");
        }
    }
}
